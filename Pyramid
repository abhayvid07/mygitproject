package selenium;

public  class Pyramid  {
	
//		  **
//	   ****
//	  ******
//	 ********
//	**********
	
public static void main(String []args) {
	
	for (int i = 1; i <= 5; i++) {
		
		for (int j = 4; j >= i; j--) {
			
			System.out.print(" ");
			
		}
		
		for (int k=1;k <= i*2; k++ ) {
			
			System.out.print("*");   
			
		}
		
		/*for (int l = 2; l<=i; l++) { // 2 way to do commented
			System.out.print("*");
		}*/
		
		System.out.println();
	}
	
		
}


}
